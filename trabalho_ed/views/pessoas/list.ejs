<% include ../partials/header %>

    <div class="container">
    <h1 class="text-center">Pessoas cadastradas</h1>
    <a class="btn btn-primary float-right" href="/cadastrar">Cadastras pessoas</a>
  
   <table class="table table-striped table-bordered ">
    <thead class="thead-inverse">
        <tr>
            <th>Profissão</th><th>Nome</th><th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% result.map(content => { %>
        <tr><td><%= content.profissao %></td><td><%= content.nome %></td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                   <!-- Button trigger modal -->
                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModal-<%= content.id %>">
                    Editar
                    </button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal-<%= content.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Editar Dados</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form method="post" action="/pessoas/edit/<%= content.id %>">
                                       <div class="form-group">
                                            <label for="idNome">Nome</label>
                                            <input class="form-control" name="nome" maxlength="30" id="idNome" type="text" value="<%= content.nome %>"/>
                                       </div> 
                                      
                                      <div class="form-group">
                                            <label for="idNascimento">Data de nascimento</label>
                                            <input class="form-control" name="nascimento" maxlength="10" id="idNascimento" type="date"/>
                                      </div>
                                      
                                      <div class="form-group">
                                            <label for="idCargo">Cargo</label>
                                            <input class="form-control" name="profissao" maxlength="20" id="idCargo" type="text"/>
                                     </div>
                                     
                                     <div class="form-group">
                                            <label for="idPessoa">ID Pessoa</label>
                                            <input readOnly class="form-control" name="id" value="<%=content.id %>" id="idPessoa" type="text"/>
                                     </div>
                                        <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </form>
                                </div>
                                
                                </div>
                            </div>
                            </div>
                    <a href="/pessoas/delete/<%= content.id%>" type="button" class="btn btn-danger" onclick="return confirm('Deseja realmente excluir? ')">Remover</a>
                </div>
            </td>
        </tr>
        <% }) %>
    </tbody>
   
    </table>
    </div>
<% include ../partials/footer %>